<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skoczo.animalheathbook.activities.AnimalAddActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/animalImageView"
                android:layout_width="match_parent"
                android:layout_height="200px"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/camera_button"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_camera"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/gallery_button"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_gallery"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <EditText
                android:id="@+id/animal_name_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="ImiÄ™"
                android:inputType="textPersonName" />

            <AutoCompleteTextView
                android:id="@+id/breed_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Rasa"
                android:maxLength="20" />

            <EditText
                android:id="@+id/age_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="2"
                android:hint="Wiek"
                android:inputType="number" />

            <EditText
                android:id="@+id/weigth_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="3"
                android:hint="Waga"
                android:inputType="number" />

            <Button
                android:id="@+id/add_animal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Dodaj" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
